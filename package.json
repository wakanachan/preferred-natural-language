{
  "name": "@preferred-natural-language/cli",
  "version": "3.0.1",
  "type": "module",
  "description": "Cross-platform natural language preference detection for AI assistants",
  "keywords": [
    "natural-language",
    "detection",
    "claude-code",
    "gemini",
    "mcp",
    "language-preference",
    "cli",
    "i18n"
  ],
  "author": "Preferred Natural Language",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pnl": "bin/pnl.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js"
    },
    "./mcp": {
      "import": "./dist/mcp/server.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "jest --testPathPattern=__tests__/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:pr": "npm run test:unit && npm run test:integration",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^12.0.0",
    "os-locale": "^6.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.6.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "jest-mock": "^29.5.0",
    "memfs": "^4.2.0",
    "cross-env": "^7.0.3"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    ".claude-plugin/**/*",
    "scripts/**/*",
    "gemini-extension.json",
    "GEMINI.md",
    "commands/**/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/preferred-natural-language/preferred-natural-language.git"
  }
}
