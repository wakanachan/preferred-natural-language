{
  "name": "preferred-natural-language",
  "version": "2.0.0",
  "type": "module",
  "description": "Multi-platform natural language detection for AI assistants",
  "keywords": ["natural-language", "detection", "claude-code", "gemini", "mcp", "language-preference"],
  "author": "Preferred Natural Language",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:all",
    "build:shared": "npm run build --workspace=@preferred-natural-language/shared",
    "build:cli": "npm run build --workspace=@preferred-natural-language/cli",
    "build:all": "npm run build:shared && npm run build:cli",
    "clean": "npm run clean --workspaces",
    "install:cli-global": "npm install -g ./packages/cli",
    "test": "jest",
    "test:unit": "jest --config jest.unit.config.ts",
    "test:integration": "jest --config jest.integration.config.ts",
    "test:e2e": "jest --config jest.e2e.config.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:pr": "npm run test:unit && npm run test:integration",
    "test:slow": "npm run test:e2e",
    "test:all": "npm-run-all test:unit test:integration test:e2e",
    "dev:shared": "npm run dev --workspace=@preferred-natural-language/shared",
    "dev:cli": "npm run dev --workspace=@preferred-natural-language/cli",
    "install:all": "npm install && npm install --workspaces",
    "test:performance": "echo 'Performance tests not implemented yet' && exit 0",
    "lint": "echo 'Linting not configured yet' && exit 0",
    "format": "echo 'Formatting not configured yet' && exit 0",
    "format:check": "echo 'Format check not configured yet' && exit 0",
    "type-check": "echo 'Type checking not configured yet' && exit 0",
    "size-limit": "echo 'Size limit not configured yet' && exit 0",
    "complexity-report": "echo 'Complexity report not implemented yet' && exit 0",
    "build:docs": "echo 'Documentation build not implemented yet' && exit 0",
    "publish": "npm publish --workspaces --if-present --access public"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.6.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "jest-mock": "^29.5.0",
    "memfs": "^4.2.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "transform": {},
    "extensionsToTreatAsEsm": [".ts"]
  }
}