{
  "name": "preferred-natural-language",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:shared && npm run build:claude && npm run build:mcp",
    "build:shared": "tsc -p tsconfig.shared.json",
    "build:claude": "tsc -p tsconfig.claude.json",
    "build:mcp": "cd mcpserver && npm run build",
    "build:all": "npm run build",
    "clean": "rm -rf shared/dist && rm -rf dist && cd mcpserver && npm run clean",
    "dev:claude": "npm run build:shared && tsc -p tsconfig.claude.json --watch",
    "dev:mcp": "cd mcpserver && npm run watch",
    "dev:shared": "tsc -p tsconfig.shared.json --watch"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "os-locale": "^6.0.2"
  }
}